{
    "compilerOptions": {
        "target": "es2016",
        "module": "ES6",
        "outDir": "./resources/js",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
    },
    "include": [
        "./resources/ts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
